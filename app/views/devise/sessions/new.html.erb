

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="text-center">Log in</h2>
  <%= f.input :email,
                required: false, label: false, placeholder: "Email", input_html: {class: "form-control"},
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false, label: false, placeholder: "Password", input_html: {class: "form-control"},
                input_html: { autocomplete: "current-password" } %>
    <%= f.button :submit, "Log in", class: 'btn btn-primary btn btn-block' %>
<% end %>
<br>
<%= render "devise/shared/links" %>
